<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="10" >

    <ScrollView
        android:id="@+id/scrollView1clogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="4" >

            <ImageView
                android:id="@+id/clientclogin"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:src="@drawable/lawc" />

            <TextView
                android:id="@+id/IPchangeclogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/ipxy"
                android:gravity="center_horizontal|center_vertical"
                android:onClick="IPAddress"
                android:paddingTop="10dp"
                android:text="Change IP Address"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1" >

            </RelativeLayout>

            <EditText
                android:id="@+id/Cuserclogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:singleLine="true"
                android:hint="Username"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/Cpassclogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:singleLine="true"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#000000" />

            <Button
                android:id="@+id/Csigninclogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:onClick="signin"
                android:text="Sign In" />

            <TextView
                android:id="@+id/Cregisterclogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/signxy"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Sign up now"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>